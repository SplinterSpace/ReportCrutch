<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-mapping>
    <class name="com.spl.reportcrutch.Worker" table="WORKER">
        <id name="id" column="ID">
            <generator class="native" /> <!-- генерация первичного ключа-->            
        </id>
        <property name="post" />
        <property name="FIO" column="FIO" type="String"/>
        <property name="address" column="ADRESSES" type="String"/>
        <property name="money" column="MONEY" type="int"/>
    </class>
</hibernate-mapping>
